{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2022",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": ["./node_modules/@types", "./src/utils/types"],
  },
  "include": [
    "src/**/*.ts",
    "src/utils/types/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}